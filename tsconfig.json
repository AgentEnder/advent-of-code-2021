{
    "compilerOptions": {
        "target": "es2015",
        "sourceMap": true,
        "importHelpers": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": ["node"],
        "lib": ["es2019"],
        "declaration": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "rootDir": "."
    }
}
